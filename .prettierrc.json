{
    "overrides": [
        {
            "files": ["*.sol", "*.json"],
            "options": {
                "printWidth": 80,
                "tabWidth": 4,
                "useTabs": false,
                "singleQuote": false,
                "explicitTypes": "always",
                "bracketSpacing": true,
                "jsxBracketSameLine": false,
                "arrowParens": "avoid",
                "proseWrap": "always"
            }
        }
    ]
}
